<div class="container-md mb-5">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-3">
      <h3 class="bg-light text-dark text-center">会員情報修正</h3>
    </div>
  </div>

  </br>

  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
      <%= form_with model: @member, url:customers_path, local:true do |f| %>

        <div class="form-group row">
          <%= f.label :last_name, "氏名", class: 'col-md-3 col-form-label' %>
          <%= f.text_field :last_name, :placeholder => "苗字", class: 'col-md-3 col-form-label'  %>
            <span class="col-sm-1" ></span>
          <%= f.text_field :first_name, :placeholder => "名前", class: 'col-md-3 col-form-label'  %>
        </div>
        <div class="form-group row">
          <%= f.label :last_name_kana, "フリガナ", class: 'col-md-3 col-form-label' %>
          <%= f.text_field :last_name_kana, :placeholder => "フリ", class: 'col-md-3 col-form-label'  %>
            <span class="col-sm-1" ></span>
          <%= f.text_field :first_name_kana, :placeholder => "カナ", class: 'col-md-3 col-form-label'  %>
        </div>
        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: 'col-md-3 col-form-label' %>
          <%= f.text_field :email, :placeholder => "〇〇〇〇＠〇〇〇〇", class: 'col-md-5 col-form-label'  %>
        </div>
        <div class="form-group row">
          <%= f.label :user_name, "ユーザーネーム", class: 'col-md-3 col-form-label' %>
          <%= f.text_field :user_name, :placeholder => "ユーザーネーム", class: 'col-md-3 col-form-label'  %>
        </div>

        <br>

        <div class="row">
          <div class="col-md-3"></div>
          <div class="col-md-3">
            <%= f.submit '編集内容内容を保存', class: "btn btn-success" %>
          </div>
          <div class="col-md-3">
            <%= link_to "退会する", customers_confirm_path, class: "btn btn-danger" %>
          </div>
        </div>
       <% end %>
    </div>
  </div>
</div>