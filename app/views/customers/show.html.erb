<div class="container-md mb-5">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-3">
      <h3 class="bg-light text-dark text-center">マイページ</h3>
    </div>
  </div>

  </br>

  <div class="row">
    <div class="col-md-2 h3">登録情報</div>
    <div class="col-md-3"><%= link_to "編集する", customers_edit_path, class: "btn btn-success" %></div>
  </div>

  </br>

  <div class="row">
    <div class="col-md-8">
      <table class="table col-md-12 table-bordered">
        <tr>
          <th class="table-secondary col-md-3">氏名</th>
          <td class="col-md-9"><%= @member.last_name %> <%= @member.first_name %></td>
        </tr>
        <tr>
          <th class="table-secondary col-md-3">フリガナ</th>
          <td class="col-md-9"><%= @member.last_name_kana %> <%= @member.first_name_kana %></td>
        </tr>
        <tr>
          <th class="table-secondary col-md-3">ユーザーネーム</th>
          <td class="col-md-9"><%= @member.user_name %></td>
        </tr>
        <tr>
          <th class="table-secondary col-md-3">メールアドレス</th>
          <td class="col-md-9"><%= @member.email %></td>
        </tr>
      </table>
    </div>
  </div>
</div>