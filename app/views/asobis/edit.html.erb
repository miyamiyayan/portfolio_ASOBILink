<div class="container-md">
  <div class="row">
    <div class="col-md-2"></div>

    <div class="col-md-3">
      <h3 class="bg-light text-dark text-center">遊び編集</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-8">
  <%= form_with model: @game, url:asobi_path(@game.id), local:true do |f| %>

    <div class="form-group row">
      <%= f.label :image, "画像", class: 'col-md-3 col-form-label' %>
      <%= f.attachment_field :image, class: 'col-md-5 col-form-label' %>
    </div>
    <div class="form-group row">
      <%= f.label :title, "タイトル", class: 'col-md-3 col-form-label' %>
      <%= f.text_field :title, :placeholder => "遊びのタイトルを入力", class: 'col-md-5 col-form-label'  %>
    </div>
    <div class="form-group row">
      <%= f.label :introduction, "詳細入力", class: 'col-md-3 col-form-label' %>
      <%= f.text_area :introduction, :placeholder => "ここに説明文を記述します", class: 'col-md-5 col-form-label' %>
    </div>
    <div class="form-group row">
      <%= f.label :address, "住所入力", class: 'col-md-3 col-form-label' %>
      <%= f.text_area :address, :placeholder => "都道府県市区町村", class: 'col-md-5 col-form-label' %>
    </div>
    <div class="form-group row">
      <%= f.label :number, "参加人数", class: 'col-md-3 col-form-label' %>
      <%= f.text_field :number, :placeholder => "5", class: 'col-md-5 col-form-label' %><span class="d-flex align-items-center">人</span>
    </div>
    <div class="form-group row">
      <%= f.label :is_active, "参加受付中or募集終了", class: 'col-md-3 col-form-label' %>
      <span class="col-md-5 col-form-label">
        <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "参加受付中" %>
        <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "募集終了" %>
      </span>
    </div>
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4">
        <%= f.submit '変更を保存', class: "btn btn-success" %>
        <% end %>

        <%= link_to "削除する", asobi_path(@game.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-success" %>


      </div>
    </div>
    </div>
  </div>
  </br>
</div>