<div class="container-md">
  <div class="row">
    <div class="col-md-3 h3">遊び一覧</div>
    <div class="col-md-6 h3"></div>
    <div class="col-md-3 h5">
      <%= link_to "遊びを追加", new_asobi_path, class: "btn btn-info btn-sm" %>
    </div>
  </div>

    <div class="card-deck">

  <% @games.each do |game| %>
      <div class="card" style="width="100%" height="200";">
        <%= link_to asobi_path(game.id) do %>
          <%= attachment_image_tag game, :image, :fill, 200, 200, format: 'jpeg' %>
      <div class="card-body">
        <h4 class="card-title">
          <%= game.title %>
        </h4>
    <% end %>
        <p class="card-text">
          場所：<%= game.address %>
          <br>
          推奨人数：<%= game.number %>人
        </p>
      </div>
    </div>
  <% end %>
  </div>

</div>