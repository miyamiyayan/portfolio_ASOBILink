<div class="container-md">
  <div class="row">
    <div class="col-md-3 h3">遊び一覧</div>
    <div class="col-md-6 h3"></div>
    <div class="col-md-3 h5">
      <%= link_to "遊びを追加", new_asobi_path, class: "btn btn-info btn-sm" %>
    </div>
  </div>
</div>

<div class="container-md">
  <div class="card-columns">

  <% @games.each do |game| %>
      <div class="card" style="width:300px;">
        <%= link_to asobi_path(game.id) do %>
          <%= attachment_image_tag game, :image, :fill, 298, 150, format: 'jpeg' %>
      <div class="card-body">
        <h4 class="card-title">
          <%= game.title %>
        </h4>
    <% end %>
        <p class="card-text">
          場所：<%= game.address %>
          <br>
          推奨人数：<%= game.number %>人
          <br>
          投稿日時：<%= game.updated_at.strftime("%Y-%m-%d %H:%M") %>
          <br>
          コメント数：<%= game.post_comments.count %>
        </p>
      </div>
    </div>
  <% end %>
  </div>
  <div class="d-flex justify-content-center h6"><%= paginate @games %></div>

</div>
