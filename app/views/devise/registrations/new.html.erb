<div class="container-md">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-3">
      <h3 class="bg-light text-dark text-center">新規会員登録</h3>
    </div>
  </div>

  </br>

  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <!--<= render "public/shared/error_messages", resource: resource %>-->

        <div class="form-group row">
          <%= f.label :last_name, "名前", class: 'col-md-3 col-form-label' %>
          <%= f.text_field :last_name, :placeholder => "苗字", class: 'col-md-3 col-form-label'  %>
            <span class="col-sm-1" ></span>
          <%= f.text_field :first_name, :placeholder => "名前", class: 'col-md-3 col-form-label'  %>
        </div>
        <div class="form-group row">
          <%= f.label :last_name_kana, "フリガナ", class: 'col-md-3 col-form-label' %>
          <%= f.text_field :last_name_kana, :placeholder => "フリ", class: 'col-md-3 col-form-label'  %>
            <span class="col-sm-1" ></span>
          <%= f.text_field :first_name_kana, :placeholder => "カナ", class: 'col-md-3 col-form-label'  %>
        </div>
        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class: 'col-md-3 col-form-label' %>
          <%= f.text_field :email, :placeholder => "〇〇〇〇＠〇〇〇〇", class: 'col-md-5 col-form-label'  %>
        </div>
        <div class="form-group row">
          <%= f.label :user_name, "ユーザーネーム", class: 'col-md-3 col-form-label' %>
          <%= f.text_field :user_name, :placeholder => "ユーザーネーム", class: 'col-md-3 col-form-label'  %>
        </div>
        <div class="form-group row">
          <%= f.label :password, "パスワード（６文字以上）", class: 'col-md-3 col-form-label' %>
            <% if @minimum_password_length %>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: 'col-md-3 col-form-label' %>
        </div>
        <div class="form-group row">
          <%= f.label :password_confirmation, "パスワード（確認用）", class: 'col-md-3 col-form-label' %>
           <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'col-md-3 col-form-label' %>
        </div>
        <div class="row">
          <div class="col-md-3"></div>
          <div class="col-md-3">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  </br>

  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-5">
      <h3 class="bg-light text-dark text-center">既に登録済みの方</h3>
    </div>
  </div>
  </br>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8 text-center">
      <h6><%= link_to "こちら", new_member_session_path %> からログインしてください。</h6>
    </div>
  </div>
  </br>
</div>